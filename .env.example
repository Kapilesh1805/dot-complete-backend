# ==================== Runtime ====================
NODE_ENV=production
PORT=5000

# Comma-separated allowed web origins for CORS in production.
# Example: https://my-frontend.vercel.app,https://admin.myapp.com
FRONTEND_URL=

# ==================== Database + Auth ====================
MONGO_URI=
JWT_SECRET=
REFRESH_TOKEN_EXPIRES_DAYS=30
PASSWORD_RESET_EXPIRY=10 minutes

# ==================== Bootstrap / Admin ====================
SUPERUSER_EMAIL=
SUPERUSER_PASSWORD=
ALLOW_BOOTSTRAP=false
ALLOW_DEV_SUPERADMIN=false
SUPERADMIN_BOOTSTRAP_SECRET=

# ==================== Email (optional) ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM_NAME=DOT Therapy

# ==================== Firebase (optional) ====================
FIREBASE_PROJECT_ID=
# Keep firebase-admin-key.json in backend root if notifications are used.

# ==================== Optional frontend build var ====================
REACT_APP_API_URL=http://localhost:5000/api
